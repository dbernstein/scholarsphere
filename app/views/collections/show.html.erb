<%= render :partial => 'generic_files/breadcrumbs', locals:{include_file:false, generic_file:GenericFile.new(title:@collection.title)}%>

<% @page_title = "#{@collection.title} - #{application_name}" %>

<h1 class="lower"><%= @collection.title %></h1>

<h3><%=@collection.description%> </h3>

<% unless has_collection_search_parameters? %>
  <div class="row">
    <div class="span40">
      <%= render :partial => 'collections/media_display', locals: {generic_file: @collection} %>
    </div>
    <div class="span2">&nbsp;</div>
    <div class="span68"><!-- class="column second"> -->
      <%= render partial: 'collections/show_actions' %>
      <%= render partial: 'generic_files/show_descriptions', locals: {generic_file: @collection} %>
      <%#= render partial: 'generic_files/show_details', locals: {generic_file: @collection} %>
    </div><!-- /columns second -->
  </div> <!-- /columns two-b -->
<% end %>
  
  <% if has_collection_search_parameters? %>
    <h2>Search Results within this Collection</h2>
  <% else %>
    <h2>Items in this Collection</h2>
  <% end %>
  <%= render partial: 'search_form'%>
  <%= render partial:'document_list', locals:{documents: @member_docs} %>
